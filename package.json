{
  "name": "typescript-express-server",
  "description": "A bare bones express server template with Typescript, Eslint, and Prettier set up properly",
  "keywords": ["javascript", "node", "express", "typescript", "eslint", "prettier"],
  "author": {
    "name": "Albin Groen",
    "email": "albin.groen@gmail.com",
    "url": "https://albingroen.com"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc & node .",
    "dev": "tsc -w & nodemon .",
    "format": "yarn prettier --write",
    "lint": "eslint . --ext .ts,.js --ignore-pattern '/dist/*'",
    "lint:fix": "yarn format && yarn lint --fix"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  }
}
